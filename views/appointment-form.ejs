    <script>
      $(document).ready(function () {
        const dayMap = {
          "Sunday": 0,
          "Monday": 1,
          "Tuesday": 2,
          "Wednesday": 3,
          "Thursday": 4,
          "Friday": 5,
          "Saturday": 6
        };
    
        let flatpickrInstance = null;
    
        function setupFlatpickr(availableDays) {
          // Destroy previous instance
          if (flatpickrInstance) flatpickrInstance.destroy();
    
          // Reset value
          $('#appointment_date').val('');
    
          // Setup new instance with only allowed days
          flatpickrInstance = flatpickr("#appointment_date", {
            dateFormat: "Y-m-d",
            disable: [
              function (date) {
                return !availableDays.includes(date.getDay());
              }
            ]
          });
        }
    
        $('#counselor_id').on('change', function () {
          const counselorId = $(this).val();
    
          if (!counselorId) return;
    
          // Fetch availability from server
          $.ajax({
            url: `http://localhost:8181/counselors/${counselorId}/availability`,
            method: 'GET',
            dataType: 'json',
            success: function (response) {
              const days = response.available_days || [];
              const availableDays = days.map(day => dayMap[day]);
    
              setupFlatpickr(availableDays);
    
              // Show date picker and note
              $('#appointment-date-wrapper').removeClass('d-none');
              $('#available-days-note').text(`Available on: ${days.join(', ')}`);
            },
            error: function () {
              alert("Failed to fetch counselor availability.");
              $('#appointment-date-wrapper').addClass('d-none');
              $('#appointment_date').val('');
              if (flatpickrInstance) flatpickrInstance.destroy();
            }
          });
        });
      });
    </script>
    
    
    
    


