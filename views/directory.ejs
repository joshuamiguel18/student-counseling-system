<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" data-assets-path="" data-base-url="" data-framework="django" data-template="vertical-menu-free">
<head>
  <%- include('includes/head.ejs') %>
</head>

<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('includes/sidebar.ejs') %>

      <div class="layout-page">
        <%- include('includes/header.ejs') %>

        <div class="content-wrapper">
          

<div class="container py-5">
  <h2 class="mb-4 fw-bold">Guidance Staff Directory</h2>

  <!-- Head of Guidance -->
  <div class="text-center mb-5">
    <div class="card p-4 shadow-sm d-inline-block">
      <img src="/uploads/default-avatar.png" class="profile-img mb-3">
      <h5 class="mb-1">Dr. Sylvia Leigh L. Quigao, RGC</h5>
      <p class="text-muted mb-0">Campus Guidance Coordinator</p>
      <small class="text-muted"><i class="bx bx-envelope"></i> sylvia.quigao@guidance.edu</small>
    </div>
  </div>

  <!-- Counselors -->
  <h5 class="section-title">Guidance Counselors</h5>
  <div class="row mb-5">
    <% const counselors = [
      {
        name: "Voltaire T. Soriano, RGC",
        email: "voltair.soriano@guidance.edu",
        role: "Campus Guidance Counselor",
        colleges: "Information & Computing Sciences, Engineering & Architecture, Veterinary Medicine"
      },
      {
        name: "Kristine Joy B. Pamittan, CHRA",
        email: "kristine.pamittan@guidance.edu",
        role: "Campus Guidance Personnel",
        colleges: "College of Industrial Technology"
      },
      {
        name: "Ayn S. Rodriguez, RPM",
        email: "ayn.rodriguez@guidance.edu",
        role: "Campus Guidance Personnel",
        colleges: "Humanities and Social Sciences, Natural Sciences and Mathematics, Medicine, Law, Graduate School"
      },
      {
        name: "Erwin C. Ternora, CHRA",
        email: "erwin.texora@guidance.edu",
        role: "Campus Guidance Personnel",
        colleges: "Human Kinetics, Public Administration"
      }
    ]; %>

    <% counselors.forEach(c => { %>
      <div class="col-md-4 mb-4">
        <div class="card p-3 shadow-sm h-100 text-center">
          <img src="/uploads/default-avatar.png" class="profile-img mb-2">
          <h6><%= c.name %></h6>
          <p class="text-muted small mb-1"><%= c.role %></p>
          <p class="text-muted small mb-1"><strong>In charge of:</strong> <%= c.colleges %></p>
          
        </div>
      </div>
    <% }) %>
  </div>
</div>



     

          <div class="content-backdrop fade"></div>








        </div>

        <%- include('includes/footer.ejs') %>
      </div>
    </div>
    <div class="layout-overlay layout-menu-toggle"></div>
    <div class="drag-target"></div>
  </div>

  <%- include('includes/scripts.ejs') %>


</body>
</html>
